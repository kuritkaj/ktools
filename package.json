{
  "name": "@kuritkaj/ktools",
  "version": "1.4.0",
  "description": "Development workflow automation tool",
  "author": "Jakub KuÅ™itka",
  "type": "module",
  "bin": {
    "ktools": "bin/run.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "homepage": "https://github.com/kuritkaj/ktools",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kuritkaj/ktools.git"
  },
  "files": [
    "/bin",
    "/dist",
    "/templates",
    "/presets",
    "/src/plugins",
    ".oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2.11.8",
    "@oclif/plugin-help": "^5.2.17",
    "@oclif/plugin-not-found": "^2.3.37",
    "@oclif/plugin-plugins": "^3.2.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/gitlab": "^12.0.5",
    "@semantic-release/npm": "^10.0.4",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cosmiconfig": "^8.2.0",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "execa": "^7.2.0",
    "fast-glob": "^3.3.1",
    "fs-jetpack": "^5.1.0",
    "ignore": "^5.2.4",
    "iter-ops": "^3.1.1",
    "listr2": "^6.6.1",
    "prompts": "^2.4.2",
    "rome": "12.1.3",
    "semantic-release": "^21.0.7",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-build": "^0.10.0",
    "which": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.1",
    "@types/prompts": "^2.4.4",
    "@types/which": "^3.0.0",
    "oclif": "^3.11.3",
    "rome": "12.1.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1"
  },
  "oclif": {
    "bin": "ktools",
    "dirname": "ktools",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-not-found"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "node ./bin/run.js lint",
    "format": "node ./bin/run.js format",
    "prerelease": "npm run build",
    "release": "node ./bin/run.js release",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/kuritkaj/ktools/issues"
  },
  "keywords": [
    "oclif",
    "ktools",
    "build",
    "lint",
    "format",
    "release",
    "test",
    "tools"
  ],
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "test": "test"
  }
}
